{
  "name": "@hydre/graphql-http",
  "version": "1.7.0",
  "description": "GraphQL over http",
  "type": "module",
  "exports": {
    "./koa": "./src/koa.js"
  },
  "scripts": {
    "test": "node test/index.test.js",
    "coverage": "c8 --check-coverage node test/index.test.js",
    "lint": "eslint . && prettier . --check",
    "format": "prettier . --write && eslint . --fix",
    "postversion": "git push --follow-tags",
    "example:koa": "node example/koa.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HydreIO/graphql-http.git"
  },
  "keywords": [
    "graphql"
  ],
  "babel": {
    "parserOpts": {
      "allowAwaitOutsideFunction": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "HydreIO Team",
  "license": "UNLICENSE",
  "bugs": {
    "url": "https://github.com/HydreIO/graphql-http/issues"
  },
  "homepage": "https://github.com/HydreIO/graphql-http#readme",
  "dependencies": {
    "graphql": "^15.6.1",
    "node-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/eslint-parser": "^7.15.8",
    "@hydre/doubt": "^7.2.1",
    "@hydre/pino-human": "1.3.0",
    "@mermaid-js/mermaid-cli": "8.13.2",
    "@types/node": "16.10.3",
    "c8": "^7.10.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "fastify": "^3.22.0",
    "husky": "4.3.8",
    "koa": "^2.13.3",
    "koa-bodyparser": "^4.3.0",
    "lint-staged": "11.2.1",
    "prettier": "2.4.1",
    "prettier-eslint-cli": "^5.0.1",
    "tap-spec-emoji": "^6.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": "prettier --write",
    "*.md": "prettier --write",
    "*.yml": "prettier --write"
  }
}
